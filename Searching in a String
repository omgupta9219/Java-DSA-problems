
import java.util.Arrays;




public class main {
    public static void main(String[] args) {
        String name ="hello";
        char target='o';
        System.out.println(search2(name,target));
        System.out.println(Arrays.toString(name.toCharArray()));


    }
    public static boolean search2(String name ,char target){                //more optimised way to search a character in a String
        if(name.length()==0){
            return false;
        }
        for(char ch:name.toCharArray()){
            if(ch==target){
                return true;
                // System.out.println();
            }
        }
        return false;
    }
    public static boolean search(String name,char target){
        if(name.length() == 0){
            return false;
        }

        for(int i=0;i<name.length();i++){
            if(name.charAt(i)==target){
                return true;
            }
        }
        return false;
    }
}
